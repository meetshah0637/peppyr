{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install && cd server && npm install",
  "outputDirectory": "dist",
  "functions": {
    "api/index.js": {
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ]
}

